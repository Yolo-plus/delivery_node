extends ../common/common
block title 
  | 管理员修改
block main
  .mws-panel.grid_8
    .mws-panel-header
      span
        font(style='vertical-align: inherit;') 管理员修改
    .mws-panel-body.no-padding
      form.mws-form(action='/admineditsubmit' method="post")
        .mws-form-inline
          .mws-form-row(style="padding-bottom:9px;")
            label.mws-form-label
              font(style='vertical-align: inherit;') 用户名
            .mws-form-item
              input.large(type='text' name="name" value="#{data.name}")
          .mws-form-row(style="padding-top:9px;")
            label.mws-form-label
              font(style='vertical-align: inherit;') 密码
            .mws-form-item
              input.large(type='password' name="password" value="#{data.password}")
        .mws-button-row
          input(type="hidden" name="id" value="#{data.id}")
          input.btn.btn-danger(type='submit' value='提交' class="btn btn-success")
          input.btn(type='reset' value='重置' class="btn btn-default")
