extends ../common/common
block title 
  | 用户详情
block main
  .mws-panel.grid_8
    .mws-panel-header
      span(style="display:inline;")
        i.icon-table
        | 用户详情
    .mws-panel-body.no-padding
      #DataTables_Table_1_wrapper.dataTables_wrapper(role='grid')
        table#DataTables_Table_1.mws-datatable-fn.mws-table.dataTable(aria-describedby='DataTables_Table_1_info')
          thead
            tr(role='row')
              th.sorting_asc(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-sort='ascending' aria-label='Rendering engine: activate to sort column descending' style='width: 258px;') 序号
              th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Browser: activate to sort column ascending' style='width: 333px;') 姓名
              th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Platform(s): activate to sort column ascending' style='width: 338px;') 照片
              th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Engine version: activate to sort column ascending' style='width: 338px;') 手机
              th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Engine version: activate to sort column ascending' style='width: 338px;') 邮箱
              th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Engine version: activate to sort column ascending' style='width: 338px;') 兴趣
          tbody(role='alert' aria-live='polite' aria-relevant='all')
          if (data)
            tr.odd
              td=data.id
              td=data.name
              td
                img(src="#{data.pic}", alt="" width="100" style="display:block;margin:0 auto;")
              td=data.phone 
              td=data.email
              td=data.hobby
          else 
            tr.odd
              td(colspan="6") 无数据
        #DataTables_Table_1_info.dataTables_info Showing 1 to 10 of 57 entries
        #DataTables_Table_1_paginate.dataTables_paginate.paging_full_numbers
          a#DataTables_Table_1_first.first.paginate_button.paginate_button_disabled(tabindex='0') First
          a#DataTables_Table_1_previous.previous.paginate_button.paginate_button_disabled(tabindex='0') Previous
          span
            a.paginate_active(tabindex='0') 1
            a.paginate_button(tabindex='0') 2
            a.paginate_button(tabindex='0') 3
            a.paginate_button(tabindex='0') 4
            a.paginate_button(tabindex='0') 5
          a#DataTables_Table_1_next.next.paginate_button(tabindex='0') Next
          a#DataTables_Table_1_last.last.paginate_button(tabindex='0') Last
