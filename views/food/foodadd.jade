extends ../common/common
block title 
  | 食品添加
block main
  .mws-panel.grid_8
    .mws-panel-header
      span
        font(style='vertical-align: inherit;') 食品添加
    .mws-panel-body.no-padding
      //- 文件上传需要包含entype属性
      form.mws-form(action='/foodaddsubmit' method="post" enctype="multipart/form-data")
        .mws-form-inline
          .mws-form-row(style="padding-bottom:9px;")
            label.mws-form-label
              font(style='vertical-align: inherit;') 食品名称
            .mws-form-item
              input.large(type='text' name="name")
          .mws-form-row(style="padding-top:9px;padding-bottom:9px;")
            label.mws-form-label
              font(style='vertical-align: inherit;') 图片
            .mws-form-item
              input.large(type='file' name="pic")
          .mws-form-row(style="padding-top:9px;padding-bottom:9px;")
            label.mws-form-label
              font(style='vertical-align: inherit;') 描述
            .mws-form-item
              input.large(type='text' name="descs")
          .mws-form-row(style="padding-top:9px;")
            label.mws-form-label
              font(style='vertical-align: inherit;') 价格
            .mws-form-item
              input.large(type='text' name="price")
          .mws-form-row(style="padding-top:9px;")
            label.mws-form-label
              font(style='vertical-align: inherit;') 所属商家
            .mws-form-item
              select.large(name="shoplist_name")
                -for(let i = 0; i < data.length; i++)
                  option(value="#{data[i].name}") #{data[i].name}
        .mws-button-row
          input.btn.btn-danger(type='submit' value='添加' class="btn btn-success")
          input.btn(type='reset' value='重置' class="btn btn-default")
