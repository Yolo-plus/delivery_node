extends ../common/common
block title 
  | 食品列表
block main
  .mws-panel.grid_8
    .mws-panel-header
      span(style="display:inline;")
        i.icon-table
        | 食品列表
    .mws-panel-body.no-padding
      #DataTables_Table_1_wrapper.dataTables_wrapper(role='grid')
        table#DataTables_Table_1.mws-datatable-fn.mws-table.dataTable(aria-describedby='DataTables_Table_1_info')
          thead
            tr(role='row')
              th.sorting_asc(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-sort='ascending' aria-label='Rendering engine: activate to sort column descending' style='width: 258px;') 序号
              th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Browser: activate to sort column ascending' style='width: 333px;') 食品名称
              th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Platform(s): activate to sort column ascending' style='width: 338px;') 图片
              th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Engine version: activate to sort column ascending' style='width: 338px;') 描述
              th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Engine version: activate to sort column ascending' style='width: 338px;') 价格
              th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Engine version: activate to sort column ascending' style='width: 338px;') 所属商家
              th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Engine version: activate to sort column ascending' style='width: 338px;') 操作
          tbody(role='alert' aria-live='polite' aria-relevant='all')
          -for(let i = 0; i < data.length; i++)
            tr.odd
              td=data[i].id
              td=data[i].name
              td
                img(src="https://delivery-yolo.oss-cn-beijing.aliyuncs.com/#{data[i].pic}" alt="" width="100")
              td=data[i].descs
              td=data[i].price
              td=data[i].shoplist_name
              td 
                a(href="javascript:;" class="btn btn-danger" style="margin-right:5px;") 删除
                a(href="javascript:;" class="btn btn-warning") 修改
        #DataTables_Table_1_info.dataTables_info Showing 1 to 10 of 57 entries
        #DataTables_Table_1_paginate.dataTables_paginate.paging_full_numbers
          a#DataTables_Table_1_first.first.paginate_button.paginate_button_disabled(tabindex='0') First
          a#DataTables_Table_1_previous.previous.paginate_button.paginate_button_disabled(tabindex='0') Previous
          span
            a.paginate_active(tabindex='0') 1
            a.paginate_button(tabindex='0') 2
            a.paginate_button(tabindex='0') 3
            a.paginate_button(tabindex='0') 4
            a.paginate_button(tabindex='0') 5
          a#DataTables_Table_1_next.next.paginate_button(tabindex='0') Next
          a#DataTables_Table_1_last.last.paginate_button(tabindex='0') Last
